<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/teacher_cardView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/bluetooth_photo"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_bluetooth_white_24dp"
                android:layout_marginEnd="5dp" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="55">

                <TextView
                    android:id="@+id/device_name"
                    android:text="@string/defaultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/device_identifier"
                    android:textColor="@color/white"
                    android:text="@string/defaultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/bluetooth_sinc"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_bluetooth_connected_white_24dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>